FROM rust:1.83-bullseye

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        ca-certificates \
        clang \
        pkg-config \
        libssl-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace
COPY . .

RUN cargo build --release --locked
RUN cargo build --release --features sqlite-state --locked

CMD ["bash", "-lc", "./target/release/openclaw-agent-rs --help >/dev/null && echo 'openclaw-agent-rs docker parity smoke passed'"]
